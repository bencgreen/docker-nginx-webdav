server {
    listen                              80;
    listen                              [::]:80;

    location / {
        root                            /www;

        autoindex                       on;

        dav_methods                     PUT DELETE MKCOL COPY MOVE;
        dav_ext_methods                 PROPFIND OPTIONS;
        dav_access                      all:rw;

        client_body_temp_path           /tmp;

        create_full_put_path            on;

        proxy_max_temp_file_size        0;
        proxy_buffering                 off;

        include                         helpers/uploads.conf;
    }
}